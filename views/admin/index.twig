{% extends 'admin/layout.twig' %}

{% block body %}
	<div class="center">
		<div id="login-card" class="form form--login">
			<h3>Login</h3>
			<form method="post" id="login" action="/users">

				<label class="form__label--required" for="email">Votre adresse email :</label>
				<input class="form__input" type="email" name="email" id="email" placeholder="Email" value="admin@admin.fr" required>

				<label class="form__label--required" for="password">Votre mot de passe :</label>
				<input class="form__input" name="password" type="password" id="password" placeholder="Mot de passe" value="Azerty01" required>

				<input class="form__submit" type="submit" value="Connexion">
			</form>
			<button class="form__switch">Créer un compte</button>
		</div>

		<div class="form form--login none" id="signin-card">
			<h3>Create Account</h3>

			<form method="post" id="signin" action="/users">
				<label class="form__label--required" for="email">Votre Pseudo :</label>
				<input class="form__input" type="text" name="pseudo" id="pseudo" placeholder="Pseudo" required value="Victor">

				<div class="grid">
					{% for i in 1..6 %}
						<img class={{"user__img user__img--" ~ i}} src={{ '/images/user' ~ i ~ '.png'}} alt="user">
					{% endfor %}
				</div>

				<select class="form__input" name="avatar">
					<option value="1">red</option>
					<option value="2">blue</option>
					<option value="3">yellow</option>
					<option value="4">purple</option>
					<option value="5">green</option>
					<option value="6">rose</option>
				</select>

				<label class="form__label--required" for="email">Votre adresse email :
				</label>
				<input class="form__input" type="email" name="email" id="email" placeholder="Email" required>

				<label class="form__label--required" for="password">Votre mot de passe :
				</label>
				<input class="form__input" name="password" type="password" id="password" placeholder="Mot de passe" required>

				<label class="form__label--required" for="password2">Répéter votre mot de passe :
				</label>
				<input class="form__input" name="password2" type="password" id="password2" placeholder="Mot de passe" required>

				<input class="form__submit" type="submit" value="Créer le compte">
			</form>
			<button class="form__switch">Se connecter</button>
		</div>
	</div>

{% endblock %}
